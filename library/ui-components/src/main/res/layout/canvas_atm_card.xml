<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:cardBackgroundColor="@color/canvascore_brand_red"
    tools:parentTag="com.google.android.material.card.MaterialCardView">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="@dimen/canvascore_margin_18"
            app:layout_constrainedWidth="true"
            app:layout_constrainedHeight="true"
            app:layout_constraintDimensionRatio="h,19:12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_bank_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/canvascore_margin_6"
                android:importantForAccessibility="no"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                app:layout_constrainedWidth="true"
                app:layout_constrainedHeight="true"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tv_card_name"
                app:layout_constraintTop_toTopOf="@id/tv_card_name"
                app:layout_constraintBottom_toBottomOf="@id/tv_card_name"
                tools:layout_width="30dp"
                tools:layout_height="30dp"
                tools:src="@tools:sample/avatars" />

            <com.scotiabank.canvascore.views.CanvasTextView
                android:id="@+id/tv_card_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/canvascore_style_subtitle2"
                android:textColor="@color/canvascore_brand_white"
                app:layout_constrainedWidth="true"
                app:layout_constraintStart_toEndOf="@id/iv_bank_logo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:maxLines="1"
                tools:text="@tools:sample/lorem/random" />

            <com.scotiabank.canvascore.views.CanvasTextView
                android:id="@+id/tv_card_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/canvascore_margin_2"
                android:textAppearance="@style/canvascore_style_subtitle1"
                android:textColor="@color/canvascore_brand_white"
                app:layout_constrainedWidth="true"
                app:layout_constrainedHeight="true"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintVertical_bias="0.66"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btn_right_action"
                app:layout_constraintTop_toBottomOf="@id/tv_card_name"
                app:layout_constraintBottom_toTopOf="@id/barrier_labels_brand"
                tools:maxLines="1"
                tools:text="@tools:sample/us_phones" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_right_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/canvascore_text_btn"
                android:minWidth="@dimen/canvascore_text_button_min_width"
                android:minHeight="@dimen/canvascore_text_button_min_height"
                android:layout_marginStart="@dimen/canvascore_margin_32"
                android:drawablePadding="@dimen/canvascore_margin_6"
                android:gravity="center"
                android:textAppearance="@style/canvascore_style_text_button_white"
                android:textAllCaps="false"
                android:visibility="gone"
                app:layout_constrainedWidth="true"
                app:layout_constraintStart_toEndOf="@id/tv_card_number"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBaseline_toBaselineOf="@id/tv_card_number"
                tools:text="@tools:sample/cities"
                tools:drawableStart="@drawable/canvascore_icon_check_white"
                tools:visibility="visible" />

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrier_labels_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="top"
                app:constraint_referenced_ids="tv_expiry_date_label,tv_code_label,iv_brand_logo" />

            <com.scotiabank.canvascore.views.CanvasTextView
                android:id="@+id/tv_expiry_date_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAppearance="@style/canvascore_style_caption_white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tv_expiry_date_value"
                tools:maxLines="1"
                tools:text="@tools:sample/cities" />

            <com.scotiabank.canvascore.views.CanvasTextView
                android:id="@+id/tv_expiry_date_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/canvascore_style_subtitle2"
                android:textColor="@color/canvascore_brand_white"
                android:letterSpacing="0.08"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:maxLines="1"
                tools:text="@tools:sample/date/day_of_week" />

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrier_expiry_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="end"
                app:constraint_referenced_ids="tv_expiry_date_label,tv_expiry_date_value" />

            <com.scotiabank.canvascore.views.CanvasTextView
                android:id="@+id/tv_code_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/canvascore_margin_32"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAppearance="@style/canvascore_style_caption_white"
                app:layout_constrainedWidth="true"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@id/barrier_expiry_date"
                app:layout_constraintEnd_toStartOf="@id/iv_brand_logo"
                app:layout_constraintBaseline_toBaselineOf="@id/tv_expiry_date_label"
                tools:maxLines="1"
                tools:text="@tools:sample/cities" />

            <com.scotiabank.canvascore.views.CanvasTextView
                android:id="@+id/tv_code_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/canvascore_margin_32"
                android:textAppearance="@style/canvascore_style_subtitle2"
                android:textColor="@color/canvascore_brand_white"
                android:letterSpacing="0.08"
                app:layout_constrainedWidth="true"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@id/barrier_expiry_date"
                app:layout_constraintEnd_toStartOf="@id/iv_brand_logo"
                app:layout_constraintBaseline_toBaselineOf="@id/tv_expiry_date_value"
                tools:maxLines="1"
                tools:text="@tools:sample/us_zipcodes" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_brand_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:importantForAccessibility="no"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:layout_width="36dp"
                tools:layout_height="24dp"
                tools:src="@tools:sample/backgrounds/scenic" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</merge>
