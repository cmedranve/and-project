<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ll_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constrainedHeight="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_constraintVertical_bias="0.0">

            <com.scotiabank.canvascore.layouts.CanvasCoreSkeletonFrameLayout
                android:id="@+id/ccs_fl_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/CanvasMaterialComponentsTheme"
                tools:layout_width="32dp"
                tools:layout_height="32dp">

                <com.scotiabank.canvascore.cards.CanvasSkeletonCard
                    android:id="@+id/c_skeleton_card_left"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </com.scotiabank.canvascore.layouts.CanvasCoreSkeletonFrameLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <pe.com.scotiabank.blpm.android.ui.list.items.recycler.NestedRecyclerView
            android:id="@+id/rv_center_items"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constrainedWidth="true"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/ll_left"
            app:layout_constraintEnd_toStartOf="@id/ll_right"
            app:layout_constraintTop_toTopOf="parent"
            tools:itemCount="3" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ll_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constrainedHeight="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_constraintVertical_bias="0.0">

            <com.scotiabank.canvascore.layouts.CanvasCoreSkeletonFrameLayout
                android:id="@+id/ccs_fl_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/CanvasMaterialComponentsTheme"
                tools:layout_width="32dp"
                tools:layout_height="32dp">

                <com.scotiabank.canvascore.cards.CanvasSkeletonCard
                    android:id="@+id/c_skeleton_card_right"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </com.scotiabank.canvascore.layouts.CanvasCoreSkeletonFrameLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.appcompat.widget.LinearLayoutCompat>
