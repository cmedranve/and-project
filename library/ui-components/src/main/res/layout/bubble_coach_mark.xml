<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="start|top">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/top_arrow"
        android:layout_width="15dp"
        android:layout_height="10dp"
        android:scaleType="fitXY"
        android:visibility="gone"
        android:rotation="180"
        app:srcCompat="@drawable/shape_coachmark_pointer"
        app:tint="@color/canvascore_brand_black" />

    <LinearLayout
        android:id="@+id/coach_mark_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/canvascore_margin_16"
        android:orientation="horizontal"
        android:background="@drawable/bubble_coach_mark_bg"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/bottom_arrow"
        android:layout_width="15dp"
        android:layout_height="10dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/shape_coachmark_pointer"
        app:tint="@color/canvascore_brand_black" />

</LinearLayout>
