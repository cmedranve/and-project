<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@style/CanvasMaterial3Theme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/canvascore_background">

    <include
        android:id="@+id/app_bar_portable"
        layout="@layout/app_bar_portable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible" />

    <com.google.android.material.search.SearchView
        android:id="@+id/search_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/SearchViewMaterial"
        app:layout_anchor="@id/search_bar"
        app:useDrawerArrowDrawable="true"
        tools:hint="@string/canvascore_button_hint">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_result_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:scrollbars="none" />

        <com.scotiabank.canvascore.views.CanvasLoadingOverlay
            android:id="@+id/clo_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            tools:visibility="visible" />

    </com.google.android.material.search.SearchView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_main_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:scrollbars="none"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bab_anchored_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:minHeight="0dp"
        app:contentInsetStart="0dp"
        app:elevation="0dp"
        style="@style/MyBottomAppBar">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_anchored_bottom_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:scrollbars="none"
            android:nestedScrollingEnabled="false" />

    </com.google.android.material.bottomappbar.BottomAppBar>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bnv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:visibility="gone"
        app:layout_insetEdge="bottom"
        tools:visibility="visible" />

    <com.scotiabank.canvascore.views.CanvasLoadingOverlay
        android:id="@+id/clo_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:visibility="visible" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_container_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
