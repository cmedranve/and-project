<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_coachmark_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/canvascore_margin_12"
    android:paddingTop="@dimen/canvascore_margin_8"
    android:paddingEnd="@dimen/canvascore_margin_12"
    android:paddingBottom="@dimen/canvascore_margin_8">

    <com.scotiabank.canvascore.views.CanvasTextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:textAppearance="@style/canvascore_style_body2_bold"
        android:textColor="@color/canvascore_brand_white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/canvascore_margin_10"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_logo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="@dimen/canvascore_margin_18"
            android:scaleType="centerInside"
            android:visibility="gone" />

        <com.scotiabank.canvascore.views.CanvasTextView
            android:id="@+id/tv_message"
            style="@style/CoachMarkMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="end"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_secondary"
            style="@style/CoachMarkSecondaryButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/canvascore_margin_6"
            android:text="En otro momento" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_primary"
            style="@style/CoachMarkPrimaryButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Configurar" />

    </LinearLayout>

</LinearLayout>
