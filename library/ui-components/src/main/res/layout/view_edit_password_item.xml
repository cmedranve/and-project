<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.scotiabank.canvascore.inputs.PasswordInputView
        android:id="@+id/piv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.scotiabank.canvascore.inputs.InputErrorView
        android:id="@+id/iev"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:focusable="true"
        android:visibility="gone"
        tools:visibility="visible" />

    <com.scotiabank.canvascore.views.CanvasTextView
        android:id="@+id/ctv_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        style="@style/canvascore_style_text_field_error"
        android:drawablePadding="@dimen/canvascore_margin_4"
        android:drawableStart="@drawable/canvascore_icon_caution"
        android:visibility="visible"
        tools:maxLines="1"
        tools:text="@tools:sample/lorem/random" />

    <com.scotiabank.canvascore.inputs.PasswordRequirements
        android:id="@+id/p_requirements"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible" />

</androidx.appcompat.widget.LinearLayoutCompat>
